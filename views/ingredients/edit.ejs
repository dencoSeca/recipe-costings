<div class="row">
    <div class="col-md-6 mx-auto">
        <h1 class="text-center mb-4">Edit <%= ingredient.product[0].name %></h1>

        <form action="/recipes/<%= recipe_id %>/ingredients/<%= ingredient._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="ingredientName">Product</label>
                <input class="form-control" id="ingredientName" type="text" value="<%= ingredient.product[0].name %>" disabled>
            </div>
            <div class="form-group">
                <label for="ingredientQuantity">Quantity (grams)</label>
                <input class="form-control" id="ingredientQuantity" type="text" name="ingredient[quantity]"
                    value="<%= ingredient.quantity %>">
            </div>
            <button class="btn btn-outline-primary btn-block mt-4 mb-3" type="submit">Submit</button>
            <a href="/recipes/<%= recipe_id %>">Return to recipe</a>
        </form>
    </div>
</div>

