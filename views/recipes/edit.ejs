<div class="row">
    <div class="col-md-6 mx-auto">
        <h1 class="text-center mb-4">Edit <%= recipe.name %></h1>

        <form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="recipeName">Name</label>
                <input class="form-control" id="recipeName" type="text" name="recipe[name]" value="<%= recipe.name %>">
            </div>
            <div class="form-group">
                <label for="recipeImage">Image URL</label>
                <input class="form-control" id="recipeImage" type="text" name="recipe[image]"
                    value="<%= recipe.image %>">
            </div>
            <div class="form-group">
                <label for="recipeDescription">Description</label>
                <textarea class="form-control" name="recipe[description]" id="recipeDescription" cols="30"
                    rows="10"><%= recipe.description %></textarea>
            </div>
            <div class="form-group">
                <label for="recipeTotalPortions">Portions Per Recipe</label>
                <input class="form-control" id="recipeTotalPortions" type="number" name="recipe[totalPortions]" min="0"
                    step="1" value="<%= recipe.totalPortions %>">
            </div>
            <button class="btn btn-outline-primary btn-block mt-4 mb-3" type="submit">Submit</button>
            <a href="/recipes/<%= recipe._id %>">Go Back</a>
        </form>
    </div>
</div>

