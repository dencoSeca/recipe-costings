<div class="row">
    <div class="col-md-6 mx-auto">
        <h1 class="text-center mb-4">Edit <%= supplier.name %></h1>
        <form action="/suppliers/<%= supplier._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="supplier[name]"
                    value="<%= supplier.name %>">
            </div>
            <h5>Address</h5>
            <div class="form-group">
                <input class="form-control" type="text" name="supplier[addressLine1]"
                    value="<%= supplier.addressLine1 %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="supplier[addressLine2]"
                    value="<%= supplier.addressLine2 %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="supplier[addressCity]"
                    value="<%= supplier.addressCity %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="supplier[addressPostcode]"
                    value="<%= supplier.addressPostcode %>">
            </div>
            <h5>Contact</h5>
            <div class="form-group">
                <input class="form-control" type="text" name="supplier[contactName]"
                    value="<%= supplier.contactName %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="supplier[contactEmail]"
                    value="<%= supplier.contactEmail %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="supplier[contactNum]"
                    value="<%= supplier.contactNum %>">
            </div>
            <button class="btn btn-outline-primary btn-block mt-4 mb-3" type="submit">Submit</button>
            <a href="/suppliers">Back to Suppliers</a>
        </form>
    </div>
</div>

<!-- --------------------------- -->
<%- include("../partials/footer") %>
<!-- --------------------------- -->