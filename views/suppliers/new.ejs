<div class="row">
    <div class="col-md-6 mx-auto">
        <h1 class="text-center mb-4">Create a new supplier</h1>
        <form action="/suppliers" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="supplier[name]" placeholder="Name">
            </div>
            <h5>Address</h5>
            <div class="form-group">
                <input class="form-control" type="text" name="supplier[addressLine1]" placeholder="Line 1">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="supplier[addressLine2]" placeholder="Line 2 (optional)">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="supplier[addressCity]" placeholder="City">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="supplier[addressPostcode]" placeholder="Postcode">
            </div>
            <h5>Contact</h5>
            <div class="form-group">
                <input class="form-control" type="text" name="supplier[contactName]" placeholder="Name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="supplier[contactEmail]" placeholder="Email">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="supplier[contactNum]" placeholder="Phone Number">
            </div>
            <button class="btn btn-outline-primary btn-block mt-4 mb-3" type="submit">Submit</button>
            <a href="/suppliers">Go Back</a>
        </form>
    </div>
</div>

